<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ooamo.server.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ooamo.server.pojo.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="nameZh" property="nameZh" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, nameZh
    </sql>

    <select id="getRoles" resultType="com.ooamo.server.pojo.Role">
        SELECT
            r.id,
            r.name,
            r.nameZh
        FROM
	        role r
            LEFT JOIN admin_role AS ar ON ar.rid = r.id
        WHERE
	        ar.adminId = #{adminId}
    </select>
</mapper>
